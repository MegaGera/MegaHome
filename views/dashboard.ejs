<!DOCTYPE html>
<html>
<head>
    <title>MegaHome</title>
    <style>
        .container {
            display: flex;
            flex-wrap: wrap;
        }
        .box {
            width: 150px;
            height: 150px;
            margin: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid #28a745;
            box-shadow: 0 4px 8px rgba(0, 128, 0, 0.2);
            text-align: center;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .box:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <h1>Welcome, <%= username %>!</h1>
    <h2>Your Services</h2>
    <div class="container">
      <div class="box" onclick="location.href='http://megagoal.megagera.com'">
        MegaGoal
      </div>
      <div class="box" onclick="location.href='http://megamedia.megagera.com'">
        MegaMedia
      </div>
      <div class="box" onclick="location.href='http://megadocu.megagera.com'">
        MegaDocu
      </div>
      <div class="box" onclick="location.href='http://megaauth.megagera.com'">
        MegaAuth
      </div>
      <!-- <% if (username.roles && username.roles.length > 0) { %>
        <% roles.forEach(role => { %>
          <div class="box" onclick="location.href='<%= role.url %>'">
            <%= role.name %>
          </div>
        <% }); %>
      <% } else { %>
        <p>No services available.</p>
      <% } %> -->
    </div>
</body>
</html>